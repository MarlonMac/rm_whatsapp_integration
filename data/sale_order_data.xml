<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!--Whatsapp message mail template of sale order -->
        <record id="sale_order_whatsapp_template" model="mail.template">
            <field name="name">Whatsapp Template for Sale Order</field>
            <field name="subject">Sales Order Template</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="is_sale_template">True</field>
            <field name="body_html"><![CDATA[<div style="font-family: Ubuntu, Arial, Verdana, sans-serif; font-size: 14px;">
         <div>
            Hola, *<t t-out="object.partner_id.name or ' '"></t>*, <br>
            Bienvenido a  *<t t-out="object.company_id.name or ' '"></t>*
			Es un gusto poder atenderte.
         </div>
         <t t-if="object.state in ('draft', 'sent')">
            Tu cotización número *<t t-out="object.name or ' '"></t>* por un monto de *<t t-out="format_amount(object.amount_total, object.currency_id)"></t>* está lista.
            <div>
                La fecha de referencia de tu cotización es: "<t t-out="object.date_order"></t>"
            </div>
            <div>
                Los detalles de tu cotización son los siguientes: <br>
                <t t-foreach="object" t-as="orders">
                    <t t-foreach="orders.order_line" t-as="order_id">
                       *Producto: <t t-out="order_id.product_id.name"></t>* <br>
                         *Cantidad: <t t-out="order_id.product_uom_qty"></t>*<br>
                         *Precio:<t t-out="order_id.price_subtotal"></t>*<br>
                    </t>
                </t>
            </div>
			<div>
            *RED MUSIC STORE*, <br>
            *TODAS LAS MARCAS EN UN SOLO LUGAR*
			</div>
         </t>
         <t t-else="">
            <div>
                Tu pedido número *<t t-out="object.name or ''"></t>* por un monto de *<t t-out="format_amount(object.amount_total, object.currency_id)"></t>* ha sido confirmado.
            </div>
            <div>
                La fecha de referencia de tu pedido es: "<t t-out="object.date_order"></t>"
            </div>
            <div>
                Los detalles de tu orden son lo siguientes: <br>
                <t t-foreach="object" t-as="orders">
                    <t t-foreach="orders.order_line" t-as="order_id">
                        *Producto: <t t-out="order_id.product_id.name"></t>* <br>
                        *Cantidad: <t t-out="order_id.product_uom_qty"></t>*<br>
                        *Precio:<t t-out="order_id.price_subtotal"></t>*<br>
                    </t>
                </t>
            </div>
            <div>
            Si tienes dudas o consultas adicionales, puedes consultarme con toda libertad.
            </div>
			<div>
            *RED MUSIC STORE*, <br>
            *TODAS LAS MARCAS EN UN SOLO LUGAR*
			</div>
         </t>
        ]]>
            </field>
        </record>
    </data>
</odoo>
